@model UserProfile

@{
    ViewData["Title"] = $"{@Model.FullName} - Profile";
}

<div class="container">
    <div class="row justify-content-center mb-2">
        <div class="col-lg-8 border border-black rounded-3 p-0 overflow-hidden">

            <!-- Cover Section (4:1 ratio) -->
            <div class="w-100" style="aspect-ratio: 4 / 1;">
                <div class="w-100 h-100" style="background: linear-gradient(90deg, #0073b1, #004182);">
                    @* Optionally insert cover image here if available *@
                    @* <img src="@Model.CoverImageUrl" class="w-100 h-100 object-fit-cover" /> *@
                </div>
            </div>

            <!-- Profile Picture (in normal flow, pulled up visually) -->
            <div class="px-4" style="margin-top: -75px; max-width: 150px; height: auto;">
                <img src="@Model.ImageUrl"
                     alt="@Model.FullName's Avatar"
                     class="rounded-3 border border-3 border-white"
                     style="object-fit: cover;" />
            </div>

            <!-- Space below image -->
            <div class="px-4 pb-4">
                <h2 class="fw-bold mb-0 mt-2">@Model.FullName</h2>
                <p class="text-muted mb-3">Software Developer</p>

                <div class="d-flex gap-2">
                    <a href="mailto:@Model.Email" class="btn btn-sm btn-primary">
                        <i class="fas fa-envelope"></i> Contact
                    </a>
                    <a href="@Model.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark">
                        <i class="fab fa-github"></i> GitHub
                    </a>
                </div>
            </div>

            <!--  -->

        </div>
    </div>

    <div class="row justify-content-center mb-2">
        <div class="col-lg-8 border border-black rounded-3 p-0 overflow-hidden">

            <!-- Space below image -->
            <div class="px-4 pb-4">
                <h4 class="fw-bold mb-2 mt-4">Contact Info</h4>

                <div action="d-flex flex-column">
                    <div class="d-flex flex-column border-start border-primary border-3 ps-3 mb-2">
                        <small class="text-muted text-uppercase">Email Address</small>
                        <p class="mb-0">
                            <a href="mailto:@Model.Email?subject=I%20saw%20your%20profile..." class="text-decoration-none">
                                @Model.Email
                                </a>
                        </p>
                    </div>
                    <div class="d-flex flex-column border-start border-primary border-3 ps-3 mb-2">
                        <small class="text-muted text-uppercase">Phone Number</small>
                        <p class="mb-0">@Model.PhoneNumber</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 border border-black rounded-3 p-0 overflow-hidden">

            <!-- Space below image -->
            <div class="px-4 pb-4">
                <h4 class="fw-bold mb-0 mt-4">Skilled Languages</h4>
                
                <div class="mt-2">
                    @foreach (string languageSkill in Model.SkilledLanguages)
                    {
                        <span class="badge bg-primary me-2 fs-6">@languageSkill</span>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
